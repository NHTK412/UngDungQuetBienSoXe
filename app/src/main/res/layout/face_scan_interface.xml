<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- User Profile Section -->
    <LinearLayout
        android:id="@+id/userProfileContainer"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="@string/user_avatar_desc" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhân Viên Tra Cứu"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Camera Preview -->
    <SurfaceView
        android:id="@+id/imgViewScan"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_below="@id/userProfileContainer"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/btnLayout"
        android:layout_marginBottom="57dp" />

    <!-- Captured image view -->
    <ImageView
        android:id="@+id/capturedImageView"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_below="@id/userProfileContainer"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/btnLayout"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="@string/captured_image_desc" />

    <!-- Button Layout -->
    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- History Button -->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Lịch sử"
            android:textColor="#000000"
            android:backgroundTint="#2196F3" />

        <!-- Scan Button -->
        <Button
            android:id="@+id/btnScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quét khuôn mặt"
            android:textColor="#000000"
            android:backgroundTint="#2196F3" />
    </LinearLayout>

</RelativeLayout>
