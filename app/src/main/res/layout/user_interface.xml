<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nút Quay Lại -->
    <Button
        android:id="@+id/btnQuayLai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textColor="#000000"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnQuayLai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Họ và tên -->
    <TextView
        android:id="@+id/txtHoVaTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        app:layout_constraintTop_toBottomOf="@id/txtHeading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/beHoVaTen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Họ và tên"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@id/txtHoVaTen"
        app:layout_constraintStart_toEndOf="@id/txtHoVaTen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- ID -->
    <TextView
        android:id="@+id/txtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        app:layout_constraintTop_toBottomOf="@id/beHoVaTen"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/beID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/txtID"
        app:layout_constraintStart_toEndOf="@id/txtID"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Giới tính -->
    <TextView
        android:id="@+id/txtGioiTinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính:"
        app:layout_constraintTop_toBottomOf="@id/beID"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/beGioiTinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Giới tính"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/txtGioiTinh"
        app:layout_constraintStart_toEndOf="@id/txtGioiTinh"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Ngày sinh -->
    <TextView
        android:id="@+id/txtNgaySinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh:"
        app:layout_constraintTop_toBottomOf="@id/beGioiTinh"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/beNgaySinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ngày sinh"
        android:inputType="date"
        app:layout_constraintTop_toTopOf="@id/txtNgaySinh"
        app:layout_constraintStart_toEndOf="@id/txtNgaySinh"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Địa chỉ thường trú -->
    <TextView
        android:id="@+id/txtDiaChiThuongTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ thường trú:"
        app:layout_constraintTop_toBottomOf="@id/beNgaySinh"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/beDiaChiThuongTru"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ"
        android:inputType="textPostalAddress"
        app:layout_constraintTop_toTopOf="@id/txtDiaChiThuongTru"
        app:layout_constraintStart_toEndOf="@id/txtDiaChiThuongTru"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Số điện thoại -->
    <TextView
        android:id="@+id/txtSoDienThoai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại:"
        app:layout_constraintTop_toBottomOf="@id/beDiaChiThuongTru"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/beSoDienThoai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:inputType="phone"
        app:layout_constraintTop_toTopOf="@id/txtSoDienThoai"
        app:layout_constraintStart_toEndOf="@id/txtSoDienThoai"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
